---

    - name: Install Packages
      yum:
        name:
          - php{{ php_version }}-{{ item }}
          - mod_php{{ php_version }}
        state: latest
        update_cache: yes
      with_items:
          - bcmath
          - cli
          - common
          - fpm
          - gd
          - intl
          - json
          - ldap
          - mbstring
          - mcrypt
          - mysqlnd
          - opcache
          - pear
          - pecl-memcached
          - pecl-redis
          - process
          - pspell
          - soap
          - xml
          - xmlrpc
